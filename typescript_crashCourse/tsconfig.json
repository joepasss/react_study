{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "removeComments": true,

    /* Modules */
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true /* Skip type checking all .d.ts files. */
  }
}
